# ===========================================
# FINCLICK.AI - AI-POWERED FINANCIAL ANALYSIS
# ===========================================
# Copy this file to .env.local and fill in your actual values

# ===========================================
# AI APIS - REQUIRED FOR AI FUNCTIONALITY
# ===========================================
# Google Gemini API for AI analysis
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# OpenAI API for advanced AI features
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION_ID=your-openai-org-id
OPENAI_MODEL=gpt-4

# ===========================================
# FINANCIAL DATA PROVIDERS - REQUIRED
# ===========================================
# Financial Modeling Prep API
FMP_API_KEY=your-fmp-api-key
FMP_BASE_URL=https://financialmodelingprep.com/api/v3

# Alpha Vantage API (alternative)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Yahoo Finance API (free)
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# PAYTABS CONFIGURATION
# ===========================================
NEXT_PUBLIC_PAYTABS_MERCHANT_EMAIL=your-email@example.com
NEXT_PUBLIC_PAYTABS_SECRET_KEY=your-paytabs-secret-key
NEXT_PUBLIC_PAYTABS_SERVER_KEY=your-paytabs-server-key
PAYTABS_MERCHANT_ID=your-paytabs-merchant-id
PAYTABS_PROFILE_ID=your-paytabs-profile-id

# ===========================================
# MONGODB CONFIGURATION
# ===========================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/finclick-ai?retryWrites=true&w=majority
MONGODB_DATABASE=finclick-ai

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-min-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_NAME=FinClick.AI
NEXT_PUBLIC_APP_URL=https://finclick-ai.vercel.app
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@finclick.ai
SENDGRID_FROM_NAME=FinClick.AI
RESEND_API_KEY=your-resend-api-key

# ===========================================
# FILE STORAGE
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=finclick-ai-files
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=finclick-ai

# ===========================================
# SECURITY
# ===========================================
ENCRYPTION_KEY=your-32-character-encryption-key
API_RATE_LIMIT=1000
SESSION_SECRET=your-session-secret-key

# ===========================================
# GITHUB INTEGRATION
# ===========================================
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO_OWNER=RazanLeo
GITHUB_REPO_NAME=FinClick.AI_Platform

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_SUBSCRIPTION=true
NEXT_PUBLIC_ENABLE_ADMIN=true
NEXT_PUBLIC_ENABLE_AI=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_HOST=http://localhost:3000
DEBUG=true

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# NODE_ENV=production
# NEXT_PUBLIC_APP_HOST=https://finclick-ai.vercel.app
# DEBUG=false
