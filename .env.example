# ===========================================
# FINCLICK.AI - COMPLETE ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your actual values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# PAYTABS CONFIGURATION
# ===========================================
# Get these from your PayTabs merchant account
NEXT_PUBLIC_PAYTABS_MERCHANT_EMAIL=your-email@example.com
NEXT_PUBLIC_PAYTABS_SECRET_KEY=your-paytabs-secret-key
NEXT_PUBLIC_PAYTABS_SERVER_KEY=your-paytabs-server-key
PAYTABS_MERCHANT_ID=your-paytabs-merchant-id
PAYTABS_PROFILE_ID=your-paytabs-profile-id

# ===========================================
# MONGODB CONFIGURATION
# ===========================================
# MongoDB connection string for data storage
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/finclick-ai?retryWrites=true&w=majority
MONGODB_DATABASE=finclick-ai

# ===========================================
# AI API KEYS
# ===========================================
# Google Gemini API for AI analysis
GEMINI_API_KEY=your-gemini-api-key

# OpenAI API for advanced AI features
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION_ID=your-openai-org-id

# ===========================================
# FINANCIAL DATA PROVIDERS
# ===========================================
# Financial Modeling Prep API
FMP_API_KEY=your-fmp-api-key
FMP_BASE_URL=https://financialmodelingprep.com/api/v3

# Alpha Vantage API (alternative)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Yahoo Finance API (free)
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key

# ===========================================
# GITHUB INTEGRATION
# ===========================================
# GitHub API for version control and updates
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO_OWNER=RazanLeo
GITHUB_REPO_NAME=FinClick.AI-By-Cursor

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# JWT secret keys for token generation
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-min-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application name and URL
NEXT_PUBLIC_APP_NAME=FinClick.AI
NEXT_PUBLIC_APP_URL=https://finclick-ai.vercel.app
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Email service for notifications
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@finclick.ai
SENDGRID_FROM_NAME=FinClick.AI

# Alternative: Resend
RESEND_API_KEY=your-resend-api-key

# ===========================================
# FILE STORAGE
# ===========================================
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=finclick-ai-files

# Alternative: Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=finclick-ai

# ===========================================
# SECURITY
# ===========================================
# Encryption keys
ENCRYPTION_KEY=your-32-character-encryption-key
API_RATE_LIMIT=1000
SESSION_SECRET=your-session-secret-key

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# For local development
NODE_ENV=development
NEXT_PUBLIC_APP_HOST=http://localhost:3000
DEBUG=true

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# For production deployment
# NODE_ENV=production
# NEXT_PUBLIC_APP_HOST=https://finclick-ai.vercel.app
# DEBUG=false

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_SUBSCRIPTION=true
NEXT_PUBLIC_ENABLE_ADMIN=true

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Webhook URLs
WEBHOOK_SECRET=your-webhook-secret
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Third-party integrations
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
